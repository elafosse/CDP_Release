<body>
  <%- include partials/header.ejs %>

  <div class="row">
    <% include ./projectSidebar %>
    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 col-xl-9">
      <br>
      <h1>List of Tasks</h1>
      <hr>
      <div class="col-9">
        <div class="row">
          <div class="list-group d-inline-flex w-25 m-2" id="tasks_todo">
            <p>Taches à faire</p>

            <% taskToDo.forEach(task => { %> <%- include partials/taskList.ejs
            %> <% }); %>
          </div>

          <div class="list-group d-inline-flex w-25 m-2" id="tasks_doing">
            <p>Taches en cours</p>
            <% taskDoing.forEach(task => { %> <%- include partials/taskList.ejs
            %> <% }); %>
          </div>

          <div class="list-group d-inline-flex w-25 m-2" id="tasks_done">
            <p>Taches terminées</p>
            <% taskDone.forEach(task => { %> <%- include partials/taskList.ejs
            %> <% }); %>
          </div>
        </div>
      </div>
      <a class="btn btn-primary" href="./newTask?projectId=<%=projectId %>&action=create" role="button">Ajouter
        tache</a>
    </div>
</body>

</html>